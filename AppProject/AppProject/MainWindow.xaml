<Window x:Class="AppProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="980" Width="1620" WindowStyle="None">
    <Window.Resources>
        <ControlTemplate x:Key="HelpButton" TargetType="{x:Type Button}">
            <Grid x:Name="ButtonGrid" Height="46" Margin="0" Width="46">
                <Ellipse x:Name="Circle" Fill="Blue" HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="46" Margin="0"/>
                <Ellipse x:Name="InnerCircle" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="38" Margin="4,4,0,0"/>
                <TextBlock x:Name="QuestionMark" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="36" Width="46" TextAlignment="Center" Text="?" FontSize="36" FontFamily="Franklin Gothic Book" RenderTransformOrigin="0.522,0.978" Margin="0,3,0,7" Foreground="Blue"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="RectangleButton" TargetType="{x:Type Button}">
            <Grid x:Name="ButtonGrid">
                <Rectangle x:Name="Box" HorizontalAlignment="Left" Height="76" VerticalAlignment="Top" Width="410" Stroke="Black" Fill="#FF00A80F"/>
                <ContentPresenter x:Name="ContentBox" HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Center" Width="Auto" Margin="106,10"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="RectangleButton2" TargetType="{x:Type Button}">
            <Grid x:Name="ButtonGrid" Width="385" Margin="5,0,0.5,0">
                <Rectangle x:Name="Box" HorizontalAlignment="Left" Height="76" VerticalAlignment="Top" Width="372" Stroke="Black" Fill="#FF00A80F"/>
                <ContentPresenter x:Name="ContentBox" HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Center" Margin="70,14.058"/>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="RectangleButton3" TargetType="{x:Type Button}">
            <Grid x:Name="ButtonGrid">
                <Rectangle x:Name="Box" HorizontalAlignment="Left" Height="76" VerticalAlignment="Top" Width="372" Stroke="Black" Fill="#FF00A80F"/>
                <ContentPresenter x:Name="ContentBox" HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Center" Width="Auto" Margin="106,10"/>
            </Grid>
        </ControlTemplate>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Canvas>
                            <Rectangle Width="220" VerticalAlignment="Top" StrokeThickness="5" Stroke="#FFFF6517" RadiusX="10" RadiusY="10" Height="100" HorizontalAlignment="Left" Fill="#FFFF822E"/>
                            <ContentPresenter HorizontalAlignment="Left" Height="26.5" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" Canvas.Top="37.5" VerticalAlignment="Top" Width="149.5" Canvas.Left="36"/>
                        </Canvas>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True"/>
                            <Trigger Property="IsDefaulted" Value="True"/>
                            <Trigger Property="IsMouseOver" Value="True"/>
                            <Trigger Property="IsPressed" Value="True"/>
                            <Trigger Property="IsEnabled" Value="False"/>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontFamily" Value="Century Gothic"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainWindowGrid" Margin="4,15.5,-12,-23.5" Height="980" Width="1620">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="MainSplitGrid" Background="#FFB0A2A2" Margin="0,0,10,10" Grid.ColumnSpan="2">
            <Grid x:Name="SideGrid" Height="960" VerticalAlignment="Top" Margin="1205,10,10,0" Width="405">
                <Grid.RowDefinitions>
                    <RowDefinition Height="277*"/>
                    <RowDefinition Height="243*"/>
                </Grid.RowDefinitions>
                <Button x:Name="SplitItemButton" Content="Split Items" VerticalAlignment="Bottom" Template="{DynamicResource RectangleButton2}" Margin="10,0,10,10" FontSize="36" FontWeight="Bold" Height="76" Grid.Row="1"/>
            </Grid>
            <ScrollViewer HorizontalAlignment="Left" Width="1195" Margin="10,10,0,10" Background="#FF5B5353">
                <UniformGrid x:Name="BillUnicormGrid" ScrollViewer.CanContentScroll="True" Columns="2" Width="1185" VerticalAlignment="Top">
                    <local:Bill Width="Auto"/>
                    <local:Bill Width="Auto"/>
                    <local:Bill Width="Auto"/>
                    <local:Bill Width="Auto"/>
                </UniformGrid>
            </ScrollViewer>
        </Grid>

        <Grid x:Name="ReviewWindow" Margin="0,0,8,8" Grid.ColumnSpan="2">
            <Grid x:Name="R_SideGrid" Background="#FFAAA5A5" HorizontalAlignment="Right" Width="405">
                <Button x:Name="R_CheckoutButton" Content="Checkout&#xA;" Template="{DynamicResource RectangleButton3}" Margin="10,894,10,10" FontSize="30" FontWeight="Bold"/>
                <Button x:Name="R_SendButton" Content="Send Orders" VerticalAlignment="Bottom" Template="{DynamicResource RectangleButton3}" Margin="10,0,10,181" FontSize="30" FontWeight="Bold" Height="76"/>
                <Button x:Name="R_EditButton" Content="Edit Orders" VerticalAlignment="Bottom" Template="{DynamicResource RectangleButton3}" Margin="10,0,10,91" FontWeight="Bold" FontSize="30"/>
                <Grid x:Name="R_SideInfoGrid" Margin="10,10,10,341" Background="#FF24247A">
                    <Grid x:Name="R_TotalGrid" Margin="10,0,10,10" Height="59" VerticalAlignment="Bottom">
                        <TextBlock x:Name="R_TotalText" HorizontalAlignment="Left" TextWrapping="Wrap" Width="136" FontWeight="Bold" FontSize="30"><Run Text="Total"/></TextBlock>
                        <TextBlock x:Name="R_TotalValue" TextWrapping="Wrap" Margin="141,0,0,0" TextAlignment="Right" FontSize="30" FontWeight="Bold"/>
                    </Grid>
                </Grid>
                <Button x:Name="R_HelpButton" Content="Button" HorizontalAlignment="Right" VerticalAlignment="Top" Width="46" Template="{DynamicResource HelpButton}" Margin="0,10,10,0" Height="46"/>
            </Grid>
            <Grid x:Name="R_BillListGrid" Background="#FF8D1A1A" Margin="10,10,405,10"/>

        </Grid>

        <Grid x:Name="MenuGrid" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Canvas x:Name="MenuInterface" Grid.ColumnSpan="2" Margin="0,0,-1,-2">
                <Grid x:Name="MenuItemsGrid" HorizontalAlignment="Left" Width="946" Background="#FF4E8197" Height="982" Canvas.Left="270">
                    <Rectangle Fill="#FFFCFFF5" HorizontalAlignment="Left" Stroke="#FFFF6600" VerticalAlignment="Top" Width="946" Height="982" StrokeThickness="4"/>
                    <Grid Margin="44,128,621.574,572.632">
                        <Rectangle Fill="#FF313F54" HorizontalAlignment="Left" Height="276" Stroke="Black" VerticalAlignment="Top" Width="276" Margin="-10,0,0,0"/>
                        <TextBlock HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="This is another title" VerticalAlignment="Top" Width="276" FontSize="24" TextAlignment="Center" Margin="-10,0,0,0" Foreground="White"/>
                        <Rectangle Fill="#FFE7E7CE" HorizontalAlignment="Left" Height="186" Margin="-4,32,0,0" Stroke="Black" VerticalAlignment="Top" Width="264"/>
                        <Rectangle Fill="#FFECEC7F" HorizontalAlignment="Left" Height="46" Margin="-4,224,0,0" Stroke="Black" VerticalAlignment="Top" Width="129"/>
                        <Rectangle Fill="#FFECEC7F" HorizontalAlignment="Left" Height="46" Margin="131,224,0,0" Stroke="Black" VerticalAlignment="Top" Width="129"/>
                        <Rectangle Fill="#FF313F54" HorizontalAlignment="Left" Height="276" Stroke="Black" VerticalAlignment="Top" Width="276" Margin="296,0,-296,0"/>
                        <TextBlock HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="This is another title" VerticalAlignment="Top" Width="276" FontSize="24" TextAlignment="Center" Margin="296,0,-296,0" Foreground="White"/>
                        <Rectangle Fill="#FFE7E7CE" HorizontalAlignment="Left" Height="186" Margin="302,32,-290,0" Stroke="Black" VerticalAlignment="Top" Width="264"/>
                        <Rectangle Fill="#FFECEC7F" HorizontalAlignment="Left" Height="46" Margin="302,224,-155,0" Stroke="Black" VerticalAlignment="Top" Width="129"/>
                        <Rectangle Fill="#FFECEC7F" HorizontalAlignment="Left" Height="46" Margin="437,224,-290,0" Stroke="Black" VerticalAlignment="Top" Width="129"/>
                    </Grid>
                    <TextBlock HorizontalAlignment="Left" Height="119" Margin="44,9,0,0" TextWrapping="Wrap" Text="Appetizers" VerticalAlignment="Top" Width="915.334" FontSize="72" FontWeight="Bold" TextDecorations="{x:Null}" TextAlignment="Center"/>
                </Grid>
                <Grid x:Name="CategoryGrid" HorizontalAlignment="Left" Width="270" Background="#FF313F54" Height="982">
                    <TextBlock Height="99" TextWrapping="Wrap" Text="Categories" VerticalAlignment="Top" FontSize="20" TextAlignment="Center" Foreground="#FFFF6600"/>
                    <Button Content="Appetizers" VerticalAlignment="Top" Margin="12,84,0,0" Height="93.96" FontSize="24" Background="#FFFCFFF5" BorderBrush="#FFFF6600" BorderThickness="4,4,0,4" Padding="1" Width="259"/>
                    <Button Content="Entrees" VerticalAlignment="Top" Margin="10,230,0,0" Height="93.96" FontSize="24" Background="#FFD1DBBD" BorderBrush="#FFFF6600" BorderThickness="4,4,0,4"/>
                    <Button Content="Desserts" VerticalAlignment="Top" Margin="10,380,0,0" Height="93.96" FontSize="24" Background="#FF91AA9D" BorderBrush="#FFFF6600" BorderThickness="4,4,0,4"/>
                    <Button Content="Drinks" VerticalAlignment="Top" Margin="10,532,0,0" Height="93.96" FontSize="24" Background="#FF4E8197" BorderBrush="#FFFF6600" BorderThickness="4,4,0,4"/>
                    <Button Content="Kids Menu" VerticalAlignment="Top" Margin="10,688,0,0" Height="93.96" FontSize="24" Background="#FF6EB6D9" BorderBrush="#FFFF6600" BorderThickness="4,4,0,4"/>
                    <Button Content="Help&#xA;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="195" Margin="36.858,885.622,0,0" FontSize="48" Height="70.571" Background="#FFA4BFE8" Foreground="#FFEF5411" FontFamily="Century Gothic" FontWeight="Bold"/>
                </Grid>
                <Grid x:Name="BillViewerGrid" HorizontalAlignment="Left" Width="405" Background="#FF313F54" Height="982" Canvas.Left="1216">
                    <Button Content="Review Order(s)" HorizontalAlignment="Left" VerticalAlignment="Top" Width="385" Height="76" Margin="10,896,0,0" FontSize="36" Background="#FF6BB8EE" BorderBrush="Black"/>
                </Grid>
            </Canvas>

        </Grid>
        <Grid x:Name="SplitGrid" Background="#FFB0A2A2" Margin="0,0,10,10" Grid.ColumnSpan="2">
            <Grid x:Name="S_SideGrid" Height="960" VerticalAlignment="Top" Margin="1205,10,10,0" Width="405">
                <Grid.RowDefinitions>
                    <RowDefinition Height="277*"/>
                    <RowDefinition Height="243*"/>
                </Grid.RowDefinitions>
                <Button x:Name="S_SplitItemButton" Content="Split Items" VerticalAlignment="Bottom" Template="{DynamicResource RectangleButton2}" Margin="10,0,10,10" FontSize="36" FontWeight="Bold" Height="76" Grid.Row="1"/>
            </Grid>
            <ScrollViewer x:Name="S_Scroller" HorizontalAlignment="Left" Width="1195" Margin="10,10,0,10" Background="#FF5B5353">
                <UniformGrid x:Name="S_BillUnicormGrid" ScrollViewer.CanContentScroll="True" Columns="2" Width="1185" VerticalAlignment="Top">
                    <local:Bill Width="Auto"/>
                    <local:Bill Width="Auto"/>
                    <local:Bill Width="Auto"/>
                    <local:Bill Width="Auto"/>
                </UniformGrid>
            </ScrollViewer>
        </Grid>
        <Grid x:Name="WelcomeScreen" Grid.ColumnSpan="2" Margin="0,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Canvas x:Name="Container" Grid.ColumnSpan="2">
                <Rectangle x:Name="Background" Fill="#FF313F54" HorizontalAlignment="Left" Height="980" StrokeThickness="0" VerticalAlignment="Top" Width="1620"/>

                <TextBlock x:Name="WelcomeMessageLabel" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="137.816" Width="1610" FontFamily="Century Gothic" FontSize="48" TextAlignment="Center" Canvas.Top="216.772" Foreground="#FFEF5411"><Run Text="Hi there"/><LineBreak/><Run Text="How many people are eating today?"/></TextBlock>
                <Slider x:Name="numberOfPeopleSlider" HorizontalAlignment="Left" Height="50.96" VerticalAlignment="Top" Width="866.336" Maximum="6" TickPlacement="BottomRight" Cursor="Hand" IsSnapToTickEnabled="True" RenderTransformOrigin="0.5,0.5" FontSize="22" FontWeight="Bold" Foreground="#EF5411" BorderBrush="#FFFF6517" Background="{x:Null}" ValueChanged="numberOfPeopleSlider_ValueChanged" Canvas.Left="374.24" Canvas.Top="503.576" />
                <TextBox x:Name="SliderNumber" Text="{Binding Value, ElementName=numberOfPeopleSlider, UpdateSourceTrigger=PropertyChanged}" TextAlignment="Center" FontSize="20" FontWeight="Bold" Width="25" Height="26.604" Canvas.Left="533" Canvas.Top="456.576" Background="#FF313F54" BorderBrush="{x:Null}" SelectionBrush="{x:Null}" IsReadOnly="True" Foreground="#FFEF5411" />
                <TextBlock x:Name="NumberOfPeopleLabel" HorizontalAlignment="Left" Height="26.604" TextWrapping="Wrap" Text="Number of People:" VerticalAlignment="Top" Width="165.76" FontSize="20" Canvas.Left="374.24" Canvas.Top="458.576" Foreground="#FFEF5411" FontStyle="Italic"/>
                <Button x:Name="StartButton" Content="Start Ordering" Style="{DynamicResource ButtonStyle1}" Cursor="Hand" Height="100" Canvas.Left="702" Canvas.Top="687.5" Width="220" Foreground="#FF313F54" FontWeight="Bold"/>
                <Image x:Name="Logo" HorizontalAlignment="Left" Height="1050.405" VerticalAlignment="Top" Width="782.849" Source="logo.png" Canvas.Left="-254.849" Canvas.Top="-226"/>

            </Canvas>

        </Grid>
        <Grid x:Name="DisplayMoreInfoGrid" Grid.ColumnSpan="2" Margin="240,155,515,205"/>

    </Grid>
</Window>
