                                    <CheckBox x:Name="ItemCheckBox3" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,6,0,0" Width="16" Height="16" IsEnabled="False" Visibility="Hidden"/>
                                </Grid>
                            </Grid>
                        </UniformGrid>
                        <Grid x:Name="BillInfoGrid1" Margin="10,10,0,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50">
                            <TextBlock x:Name="BillText1" TextWrapping="Wrap" FontWeight="Bold" FontSize="20" Text="Bill #" Height="28"/>
                            <TextBlock x:Name="BillNumber1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="50,0,0,0" Height="28" FontSize="20" FontWeight="Bold"/>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid x:Name="BillMainGrid_Copy1" Background="#FFA8A8A8" Margin="0,0,222.5,0" Width="400" MinHeight="94">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid x:Name="InnerGrid2" Margin="10" Background="#FF00FFF3" Width="380">
                        <CheckBox x:Name="BillCheckBox2" Content="" VerticalAlignment="Top" Margin="0,15,15,0" HorizontalAlignment="Right" Width="16" Height="16"/>
                        <Grid x:Name="TotalInfoGrid2" Margin="236.526,0,20,10" Height="23" VerticalAlignment="Bottom">
                            <TextBlock x:Name="TotalText2" TextWrapping="Wrap" Margin="0,0,80.474,0" FontSize="18" FontWeight="Bold"><Run Text="Total"/><LineBreak/><Run/><LineBreak/></TextBlock>
                            <TextBlock x:Name="TotalNumber2" TextWrapping="Wrap" Margin="43,0,0,0" FontSize="18" FontWeight="Bold" TextAlignment="Right"/>
                        </Grid>
                        <UniformGrid x:Name="ItemListGrid2" Margin="10,38,10,36" Columns="1" Width="340">
                            <Grid x:Name="BillItemGrid2" Width="340" MinWidth="340" MinHeight="28" Background="#FF52A2A2" Margin="0,0,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <UniformGrid x:Name="AdditionalInfoGrid4" Columns="1" Grid.Column="1" Margin="0,28,0,0" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom">
                                    <TextBlock x:Name="textBlock8" TextWrapping="Wrap" Text="TextBlock"/>
                                    <TextBlock x:Name="textBlock9" TextWrapping="Wrap" Text="TextBlock"/>
                                </UniformGrid>
                                <Grid x:Name="ItemTitleGrid4" Grid.ColumnSpan="2" Height="28" VerticalAlignment="Top">
                                    <TextBlock x:Name="ItemName4" TextWrapping="Wrap" Margin="28,0,87.355,0" Height="28"><Run FontSize="20" Text="Sample Item "/><LineBreak/><Run FontSize="20"/><LineBreak/><Run/></TextBlock>
                                    <TextBlock x:Name="ItemPrice4" TextWrapping="Wrap" Margin="252.645,0,0,0" Text="9.99" FontSize="20" TextAlignment="Right" Height="28" VerticalAlignment="Top"/>
                                    <CheckBox x:Name="ItemCheckBox4" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,6,0,0" Width="16" Height="16" IsEnabled="False" Visibility="Hidden"/>
