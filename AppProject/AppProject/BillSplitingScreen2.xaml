                        <UniformGrid x:Name="ItemListGrid1" Margin="10,38,10,36" Columns="1" Width="340">
                            <Grid x:Name="BillItemGrid1" Width="340" MinWidth="340" MinHeight="28" Background="#FF52A2A2" Margin="0,0,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <UniformGrid x:Name="AdditionalInfoGrid2" Columns="1" Grid.Column="1" Margin="0,28,0,0" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom">
                                    <TextBlock x:Name="textBlock4" TextWrapping="Wrap" Text="TextBlock"/>
