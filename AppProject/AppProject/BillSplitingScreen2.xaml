                            </Grid>
                            <Grid x:Name="BillItemGrid_Copy2" Width="340" MinWidth="340" MinHeight="28" Background="#FF52A2A2" Margin="0,0,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <UniformGrid x:Name="AdditionalInfoGrid5" Columns="1" Grid.Column="1" Margin="0,28,0,0" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom">
                                    <TextBlock x:Name="textBlock10" TextWrapping="Wrap" Text="TextBlock"/>
                                    <TextBlock x:Name="textBlock11" TextWrapping="Wrap" Text="TextBlock"/>
                                </UniformGrid>
                                <Grid x:Name="ItemTitleGrid5" Grid.ColumnSpan="2" Height="28" VerticalAlignment="Top">
                                    <TextBlock x:Name="ItemName5" TextWrapping="Wrap" Margin="28,0,87.355,0" Height="28"><Run FontSize="20" Text="Sample Item "/><LineBreak/><Run FontSize="20"/><LineBreak/><Run/></TextBlock>
                                    <TextBlock x:Name="ItemPrice5" TextWrapping="Wrap" Margin="252.645,0,0,0" Text="9.99" FontSize="20" TextAlignment="Right" Height="28" VerticalAlignment="Top"/>
                                    <CheckBox x:Name="ItemCheckBox5" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,6,0,0" Width="16" Height="16" IsEnabled="False" Visibility="Hidden"/>
                                </Grid>
                            </Grid>
                        </UniformGrid>
                        <Grid x:Name="BillInfoGrid2" Margin="10,10,0,0" Height="28" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50">
                            <TextBlock x:Name="BillText2" TextWrapping="Wrap" FontWeight="Bold" FontSize="20" Text="Bill #" Height="28"/>
                            <TextBlock x:Name="BillNumber2" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="50,0,0,0" Height="28" FontSize="20" FontWeight="Bold"/>
                        </Grid>
                    </Grid>
                </Grid>
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>
