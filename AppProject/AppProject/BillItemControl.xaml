<UserControl x:Class="AppProject.BillItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppProject"
             mc:Ignorable="d" Width="340" MinHeight="30">
    <Grid x:Name="BillItemGrid" Width="340" MinWidth="340" MinHeight="28" Background="#FF52A2A2" Margin="0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <UniformGrid x:Name="AdditionalInfoGrid" Columns="1" Grid.Column="1" Margin="0,28,0,0" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="TextBlock"/>
            <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="TextBlock"/>
        </UniformGrid>
        <Grid x:Name="ItemTitleGrid" Grid.ColumnSpan="2" Height="28" VerticalAlignment="Top">
            <TextBlock x:Name="ItemName" TextWrapping="Wrap" Margin="28,0,87.355,0" Height="28"><Run FontSize="20" Text="Sample Item "/><LineBreak/><Run FontSize="20"/><LineBreak/><Run/></TextBlock>
            <TextBlock x:Name="ItemPrice" TextWrapping="Wrap" Margin="252.645,0,0,0" Text="9.99" FontSize="20" TextAlignment="Right" Height="28" VerticalAlignment="Top"/>
            <CheckBox x:Name="ItemCheckBox" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="6,6,0,0" Width="16" Height="16" IsEnabled="False"/>
        </Grid>
    </Grid>
</UserControl>
