<UserControl x:Class="AppProject.BillSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppProject"
             mc:Ignorable="d" Height="69" Width="360">
    <Grid x:Name="BillSelectionMainGrid" Width="360" Height="69" Background="#FF62A671" MouseDown="BillSelectionMainGrid_MouseDown">
        <Rectangle x:Name="Border" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="69" Stroke="Black" VerticalAlignment="Top" Width="360"/>

        <TextBlock x:Name="BillName" TextWrapping="Wrap" Margin="10" FontSize="36" Background="#FF62A671"><Run Text="Hello"/><LineBreak/><Run Text="."/><LineBreak/><Run/><LineBreak/><Run Text="\"/></TextBlock>

    </Grid>
</UserControl>
